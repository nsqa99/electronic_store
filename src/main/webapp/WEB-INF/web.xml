<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>SearchServlet</servlet-name>
  	<display-name>SearchServlet</display-name>
  	<description></description>
  	<servlet-class>ltweb.electronic_store.controller.SearchServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>OrderServlet</servlet-name>
  	<display-name>OrderServlet</display-name>
  	<description></description>
  	<servlet-class>ltweb.electronic_store.controller.OrderServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>DetailOrderServlet</servlet-name>
  	<display-name>DetailOrderServlet</display-name>
  	<description></description>
  	<servlet-class>ltweb.electronic_store.controller.DetailOrderServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SearchServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>OrderServlet</servlet-name>
  	<url-pattern>/OrderServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>DetailOrderServlet</servlet-name>
  	<url-pattern>/DetailOrderServlet</url-pattern>
  </servlet-mapping>
</web-app>
